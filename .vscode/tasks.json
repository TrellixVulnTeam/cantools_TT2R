{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make Windows",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}/build/apps/can_dump",
                "all+",
                "TARGET=mingw-windows"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "clean Windows",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}/build/apps/can_dump",
                "clean+",
                "TARGET=mingw-windows"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "make Linux",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}/build/apps/can_dump",
                "all+",
                "TARGET=gcc-linux"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "clean Linux",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}/build/apps/can_dump",
                "clean+",
                "TARGET=gcc-linux"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}